                                android:fontFamily="@font/nunito_sans_extrabold"
                                android:gravity="center"
                                android:shadowColor="#05BECF"
                                android:shadowDx="0.0"
                                android:shadowDy="0.0"
                                android:shadowRadius="0"
                                android:text="الايام المتبقية:"
